# KinCircle Environment Variables
# Copy this file to .env.local and fill in your values

# Gemini AI API Key (server-side)
GEMINI_API_KEY=your_gemini_api_key_here

# Supabase Configuration (optional - for cloud sync)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Optional API base URL (when running the local backend proxy)
VITE_API_BASE_URL=http://localhost:8787

# Optional API auth token (use with KIN_API_TOKEN on the server)
VITE_KIN_API_TOKEN=your_shared_api_token_here

# Optional logging controls
VITE_ENABLE_LOGGING=false
VITE_LOG_LEVEL=warn

# Optional LightOnOCR for offline/fallback receipt scanning
VITE_OCR_ENABLED=false
VITE_OCR_SERVICE_URL=http://localhost:8090

# Storage Provider: 'local' or 'supabase' (default: auto-detect)
VITE_STORAGE_PROVIDER=local

# Optional Supabase auth mode: 'none' or 'anonymous'
VITE_SUPABASE_AUTH_MODE=none

# Backend server hardening (server/index.js)
KIN_API_HOST=127.0.0.1
KIN_API_PORT=8787
KIN_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
KIN_RATE_LIMIT_WINDOW_MS=60000
KIN_RATE_LIMIT_MAX=60
KIN_AI_RATE_LIMIT_MAX=20
KIN_PRIVACY_REQUIRED=false
KIN_API_TOKEN=your_shared_api_token_here
